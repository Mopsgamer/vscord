{
  "$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!dist"]
  },
  "formatter": {
    "indentWidth": 2,
    "indentStyle": "space"
  },
  "linter": {
    "rules": {
      "style": {
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noConstEnum": "off",
        "useGetterReturn": "off"
      }
    }
  }
}
